bool as(P a,P b)
{
    if(a.x!=b.x)
    return a.x<b.x;
    return a.y<b.y;
}


int main()
{
    cin>>r;
    if(r[r.size()-1]=='1'||r[0]=='0')
    {
        puts("-1");
        return 0;
    }
    for(int i=0,j=(int)r.size()-2;i<j;i++,j--)
    {
        if(r[i]!=r[j])
        {
            puts("-1");
            return 0;
        }
    }
    n=r.size()/2-1;
    for(int i=n;i>0;i--)
    {


        /*if(r[i]>r[i-1])
    {
        puts("-1");
        return 0;
    }*/
    if(r[i]=='1'&&m==0) m=i+1;

    }
    if(!m) m=1;
    //printf("@@%d",m);
    printf("%d %d\n",m+1,m);
    for(int i=m+1;i<r.size();i++)
        printf("%d %d\n",m+1,i+1);
    for(int i=m;i>1;i--)
    {
        for(int j=i-2;j>=0;j--)
        {
            printf("%d %d\n",i,j+1);
            if(r[j]=='1')
            {
                i=j+2;
                break;
            }
        }
    }
}
