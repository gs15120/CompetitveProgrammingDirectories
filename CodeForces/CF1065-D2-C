bool as(P a,P b)
{
    return a.z<b.z;
}



int main()
{
    scanf("%d %d",&a,&b);
    n=987654321;
    for(int t=1;t<=a;t++)
    {
        scanf("%d",&c);
        o[1]++;
        o[c+1]--;
        n=min(n,c);
    }
    for(int t=1;t<=200000;t++)
        o[t]+=o[t-1];
    for(int t=200000;t>n;t--)
    {
        if(x+o[t]>b)
            z++,x=0;
        x+=o[t];
    }
    if(x) z++;
    printf("%lld",z);
}
