bool as(P a,P b)
{
    if(a.x!=b.x)
    return a.x<b.x;
    return a.y>b.y;
}

bool asd(int a,int b)
{
    return a>b;
}

int main()
{
    scanf("%d %d",&a,&b);
    for(int t=1;t<=a;t++)
    {
        scanf("%d",&o[t]);
        z+=o[t];
    }
    sort(o+1,o+a+1,asd);
    for(int t=1;t<=a;t++)
    {
        if(o[t]>o[t+1])
        x+=o[t]-o[t+1];
        else if(o[t]>1)
        {
            x++;
            o[t+1]=o[t]-1;
        }
        else if(o[t])
        {
            if(o[t+1]) o[t+1]=1;
            x++;
        }
    }
    printf("%lld",z-x);
}
